<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        x:Name="taskWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TaskWindow" Height="500" Width="900"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Background>
        <ImageBrush Stretch="Fill" Opacity="0.7" x:Name="IB"/>
    </Window.Background>
    <Grid>
        <Border Margin="30,21,542,31" Background="#FFE5E5E5" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="LightCoral" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Ownings" Margin="20,5,0,5"/>
                <ListBox x:Name="playerassetsBox" HorizontalAlignment="Right" Height="370" VerticalAlignment="Top" Width="310" ItemsSource="{Binding Ownings}" Margin="5,0,5,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Background" Value="LightSteelBlue"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,20,0" Width="160" TextAlignment="Left" TextWrapping="Wrap"><InlineUIContainer>
                                                    <ContentPresenter/>
                                                </InlineUIContainer></TextBlock>
                                            <Button Content="Sell" Foreground="White" Focusable="False" Margin="0,5,5,5" MaxHeight="30" Click="SellClick">
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="!" HorizontalAlignment="Right" Foreground="White" Focusable="False" Margin="0,0,10,0" MaxHeight="20" MaxWidth="20" Click="InfoClick">
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="SteelBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>
        <TabControl HorizontalAlignment="Left" Height="418" Margin="380,21,0,0" VerticalAlignment="Top" Width="326">
            <TabItem Header="Stocks">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="stocksBox" HorizontalAlignment="Right" Height="370" VerticalAlignment="Top" Width="310" ItemsSource="{Binding StockMarket}" Margin="0,6,6,0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="LightSteelBlue"/>
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,20,0" Width="160" TextAlignment="Left" TextWrapping="Wrap"><InlineUIContainer>
                                                    <ContentPresenter/>
                                                </InlineUIContainer></TextBlock>
                                                <Button Content="Buy" Foreground="White"  Focusable="False" Margin="30,5,5,5" MaxHeight="30" Click="BuyClick">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="SteelBlue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Bond">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="bondsBox" HorizontalAlignment="Right" Height="370" VerticalAlignment="Top" Width="310" ItemsSource="{Binding BondMarket}" Margin="0,6,6,0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="LightSteelBlue"/>
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,20,0" Width="160" TextAlignment="Left" TextWrapping="Wrap"><InlineUIContainer>
                                                    <ContentPresenter/>
                                                </InlineUIContainer></TextBlock>
                                                <Button Content="Buy" Foreground="White"  Focusable="False" Margin="30,5,5,5" MaxHeight="30" Click="BuyClick">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="SteelBlue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Deposits">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="depositsBox" HorizontalAlignment="Right" Height="370" VerticalAlignment="Top" Width="310" ItemsSource="{Binding DepositMarket}" Margin="0,6,6,0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="LightSteelBlue"/>
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,20,0" Width="160" TextAlignment="Left" TextWrapping="Wrap"><InlineUIContainer>
                                                    <ContentPresenter/>
                                                </InlineUIContainer></TextBlock>
                                                <Button Content="Buy" Foreground="White"  Focusable="False" Margin="30,5,5,5" MaxHeight="30" Click="BuyClick">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Visibility" Value="Hidden" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="SteelBlue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
        <TextBlock x:Name="playerinfoTextBlock" HorizontalAlignment="Left" Height="33" Margin="716,22,0,0" VerticalAlignment="Top" Width="172"/>
        <Label x:Name="goalsLebel" Content="Goals(tracking?)" HorizontalAlignment="Left" Height="33" Margin="716,144,0,0" VerticalAlignment="Top" Width="172"/>
        <Button x:Name="endturnButton" Content="End turn" HorizontalAlignment="Left" Height="76" Margin="739,363,0,0" VerticalAlignment="Top" Width="131"/>
    </Grid>
</Window>
